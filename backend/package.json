    "class-validator": "^0.14.0",
    "handlebars": "^4.7.8",
    "minio": "^7.1.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27",
    "uuid": "^9.0.1"
