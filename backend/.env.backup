# ==============================================
# CONFIGURACIÓN GENERAL
# ==============================================
NODE_ENV=development
PORT=3001
APP_NAME=HackatonTech2

# ==============================================
# BASE DE DATOS - PostgreSQL
# ==============================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hackatontech2_dev?schema=public"

# ==============================================
# JWT - AUTENTICACIÓN
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=30d

# ==============================================
# REDIS - CACHE Y PUB/SUB
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# INTEGRACIÓN SIGA
# ==============================================
SIGA_BASE_URL=https://datasae.talentotechcolombia.com
SIGA_CLIENT_ID=your-siga-client-id
SIGA_SECRETO=your-siga-secret
SIGA_TOKEN_EXPIRATION=3600

# ==============================================
# INTEGRACIÓN MOODLE (OPCIONAL)
# ==============================================
MOODLE_API_URL=https://your-moodle-instance.com/api
MOODLE_API_KEY=your-moodle-api-key
MOODLE_ENABLED=false

# ==============================================
# ALMACENAMIENTO - MinIO / S3
# ==============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=hackatontech2

# Alternativamente para AWS S3
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=hackatontech2-bucket

# ==============================================
# EMAIL - NOTIFICACIONES
# ==============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=noreply@hackatontech2.com
MAIL_PASSWORD=your-email-password
MAIL_FROM="HackatonTech2 <noreply@hackatontech2.com>"
MAIL_SECURE=false

# Para Gmail:
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USER=your-gmail@gmail.com
# MAIL_PASSWORD=your-app-password

# ==============================================
# WEBSOCKETS
# ==============================================
WS_PORT=3002
WS_CORS_ORIGIN=http://localhost:3000

# ==============================================
# CORS - FRONTEND
# ==============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==============================================
# RATE LIMITING
# ==============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ==============================================
# ARCHIVOS - UPLOAD
# ==============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf
UPLOAD_DIR=./uploads

# ==============================================
# LOGS
# ==============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ==============================================
# APLICACIÓN - URLs
# ==============================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_PREFIX=/api

# ==============================================
# SWAGGER - DOCUMENTACIÓN API
# ==============================================
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs
SWAGGER_TITLE=HackatonTech2 API
SWAGGER_DESCRIPTION=API para gestión de hackathones TalentoTech
SWAGGER_VERSION=1.0

# ==============================================
# SEGURIDAD
# ==============================================
BCRYPT_SALT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
SESSION_SECRET=your-session-secret-change-this

# ==============================================
# HACKATHON - CONFIGURACIÓN
# ==============================================
MAX_TEAM_MEMBERS=5
DEFAULT_HACKATHON_DURATION_DAYS=3
REGISTRATION_CUTOFF_DAYS=1

# ==============================================
# TIMEZONE
# ==============================================
TZ=America/Bogota
