# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000

# Application Configuration
NEXT_PUBLIC_APP_NAME=Plataforma de Evaluación de Código
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_JWT_SECRET=your-secret-key-here
NEXT_PUBLIC_TOKEN_EXPIRY=24h

# Code Execution
NEXT_PUBLIC_MAX_CODE_LENGTH=10000
NEXT_PUBLIC_EXECUTION_TIMEOUT=30000

# WebSocket Configuration
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=3000

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Development
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# File Upload (if needed in future)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.py,.js,.java,.cpp

# Session Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=1800000
NEXT_PUBLIC_SESSION_WARNING_TIME=300000

# UI Configuration
NEXT_PUBLIC_THEME_COLOR=#0ea5e9
NEXT_PUBLIC_DEFAULT_LANGUAGE=es
